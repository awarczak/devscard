---
import type { CommunitySection } from '@/types/sections/community-section.types';
import DashedDivider from '../components/dashed-divider.astro';
import Description from '../components/description.astro';
import LabelledValue from '../components/labelled-value.astro';
import ListItemHeading from '../components/list-item-heading.astro';
import SectionHeading from '../components/section-heading.astro';
import TagsList from '../components/tags-list.astro';

export interface Props extends CommunitySection {}

const { config, communityProjects } = Astro.props;
---

<div>
  <SectionHeading>{config.title}</SectionHeading>
  <div class="flex flex-col">
    {
      communityProjects.map(({ name, description, details, pdfDetails, tagsList, dates, date }) => () => (
        <>
          <div class="flex flex-col gap-2">
            <ListItemHeading title={name} dates={dates} date={date} />
            <Description content={description} />
            <TagsList {...tagsList} />
          </div>
          <DashedDivider />
        </>
      ))
    }
  </div>
</div>
