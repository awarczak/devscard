---
import formatDate from '@/utils/format-date';

export interface Props {
  class?: string;
  date: Date;
}

const { date, ...props } = Astro.props;
---

<div
  class:list={[
    'flex h-6 w-fit items-center whitespace-nowrap rounded bg-gray-800 px-2.5 text-sm font-medium text-white',
    props.class,
  ]}
>
  {formatDate(date)}
</div>
